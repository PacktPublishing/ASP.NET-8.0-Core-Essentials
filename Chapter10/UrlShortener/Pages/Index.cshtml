@page
@model UrlShortener.Pages.IndexModel
@{
    ViewData["Title"] = "URL Shortener";
}

<div class="container">
    <h1>URL Shortener</h1>
    
    <form method="post">
        <div class="form-group">
            <label asp-for="OriginalUrl" class="control-label"></label>
            <input asp-for="OriginalUrl" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Shorten</button>
    </form>

    <h2>Shortened URLs</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Original URL</th>
                <th>Shortened URL</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var url in Model.ShortUrls)
        {
            <tr>
                <td>@url.Url</td>
                <td>
                    <a href="/@url.ShortenedUrl" target="_blank">@($"{Request.Scheme}://{Request.Host}/{url.ShortenedUrl}")</a>                
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>